<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LengkapiProfilActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_lengkapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lengkapi_profilmu"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_informasi_dasar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:drawableEnd="@drawable/dropdown"
                android:paddingHorizontal="30dp"
                android:text="@string/iformasi_dasar"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/linear_informasi_dasar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:hint="@string/nama"
                    app:boxBackgroundColor="#fff"
                    app:helperTextTextAppearance="@color/colorPrimaryDark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:hint="@string/tempat_lahir"
                    app:boxBackgroundColor="#fff"
                    app:helperTextTextAppearance="@color/colorPrimaryDark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_tempat_lahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:id="@+id/rl_tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_tanggal_lahir"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:hint="@string/tanggal_lahir"
                        app:boxBackgroundColor="#fff"
                        app:helperTextTextAppearance="@color/colorPrimaryDark">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_tanggal_lahir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/iv_tanggal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="32dp"
                        android:layout_toEndOf="@id/til_tanggal_lahir"
                        android:contentDescription="@string/icon_tanggal"
                        android:src="@drawable/ic_tanggal" />

                    <TextView
                        android:id="@+id/tv_jenis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/til_tanggal_lahir"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="34dp"
                        android:text="@string/jenis_kelamin"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/rg_jenis_kelamin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_jenis"
                        android:theme="@style/RadioButton"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_laki"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/laki_laki"
                            android:textColor="@color/colorPrimaryDark" />

                        <RadioButton
                            android:id="@+id/radio_perempuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/perempuan"
                            android:textColor="@color/colorPrimaryDark" />


                    </RadioGroup>

                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:hint="@string/kota_kabupaten"
                    app:boxBackgroundColor="#fff"
                    app:helperTextTextAppearance="@color/colorPrimaryDark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_kota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:hint="@string/alamat_rumah"
                    app:boxBackgroundColor="#fff"
                    app:helperTextTextAppearance="@color/colorPrimaryDark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_alamat_rumah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:lines="3"
                        android:maxLines="3" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_informasi_kontak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:drawableEnd="@drawable/dropdown"
                android:paddingHorizontal="30dp"
                android:text="@string/informasi_kontak"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/linear_informasi_kontak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:hint="@string/nomor_whatsapp"
                    app:boxBackgroundColor="#fff"
                    app:helperTextTextAppearance="@color/colorPrimaryDark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_nomor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:hint="@string/email"
                    app:boxBackgroundColor="#fff"
                    app:helperTextTextAppearance="@color/colorPrimaryDark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_informasi_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:drawableEnd="@drawable/dropdown"
                android:paddingHorizontal="30dp"
                android:text="@string/informasi_personal"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/linear_informasi_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/jenis_kulit"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/berapa_umur_kamu"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />


                <com.llollox.androidprojects.compoundbuttongroup.CompoundButtonGroup
                    android:id="@+id/rg_umur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:theme="@style/RadioButton"
                    app:compoundType="radio"
                    app:entries="@array/umur"
                    app:labelOrder="after"
                    app:numCols="2" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/apakah_kamu_sedang_hamil_atau_menyusui"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_hamil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/RadioButton"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_ya_hamil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/ya"
                        android:textColor="@color/colorPrimaryDark" />

                    <RadioButton
                        android:id="@+id/radio_tidak_hamil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/tidak"
                        android:textColor="@color/colorPrimaryDark" />


                </RadioGroup>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/apakah_jenis_kulitmu"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />


                <com.jbvincey.nestedradiobutton.NestedLinearRadioGroup
                    android:id="@+id/rg_kulit_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:theme="@style/RadioButtonWhite"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        app:cardBackgroundColor="@color/colorPrimaryDark"
                        app:cardCornerRadius="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/radio_kulit_normal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/normal"
                                android:textColor="@color/colorWhite" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginBottom="5dp"
                                android:contentDescription="@string/gambar_kulit_normal"
                                android:src="@drawable/kulitnormal" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_berminyak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50dp"
                        app:cardBackgroundColor="@color/colorPrimaryDark"
                        app:cardCornerRadius="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/radio_kulit_berminyak"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/berminyak"
                                android:textColor="@color/colorWhite" />


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginBottom="5dp"
                                android:contentDescription="@string/gambar_kulit_berminyak"
                                android:src="@drawable/kulitberminyak" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_kering"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50dp"
                        app:cardBackgroundColor="@color/colorPrimaryDark"
                        app:cardCornerRadius="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/radio_kulit_kering"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/kering"
                                android:textColor="@color/colorWhite" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginBottom="5dp"
                                android:contentDescription="@string/gambar_kulit_berminyak"
                                android:src="@drawable/kulitkering" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_kombinasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50dp"
                        app:cardBackgroundColor="@color/colorPrimaryDark"
                        app:cardCornerRadius="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/radio_kulit_Kombinasi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/kombinasi"
                                android:textColor="@color/colorWhite" />


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginBottom="5dp"
                                android:contentDescription="@string/gambar_kulit_berminyak"
                                android:src="@drawable/kulitkombinasi" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </com.jbvincey.nestedradiobutton.NestedLinearRadioGroup>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/apakah_kulit_kamu_sensitif_biasanya_kulit_yang_sensitif_ditandai_dengan_mudah_memerah_atau_gatal"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_sensitif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/RadioButton"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_ya_sensitif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/ya"
                        android:textColor="@color/colorPrimaryDark" />

                    <RadioButton
                        android:id="@+id/radio_tidak_sensitif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/tidak"
                        android:textColor="@color/colorPrimaryDark" />


                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/apakah_kulit_kamu_iritasi"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_iritasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/RadioButton"
                    android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_ya_iritasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/ya"
                    android:textColor="@color/colorPrimaryDark" />

                <RadioButton
                    android:id="@+id/radio_tidak_iritasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/tidak"
                    android:textColor="@color/colorPrimaryDark" />

                </RadioGroup>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/apakah_saat_ini_kamu_sedang_berjerawat"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_jerawat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/RadioButton"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_ya_jerawat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/ya"
                        android:textColor="@color/colorPrimaryDark" />

                    <RadioButton
                        android:id="@+id/radio_tidak_jerawat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/tidak"
                        android:textColor="@color/colorPrimaryDark" />


                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/tingkat_keparahan_jerawat_kamu"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <com.jbvincey.nestedradiobutton.NestedLinearRadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_tidak_ada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        app:cardBackgroundColor="@color/colorPrimaryDark"
                        app:cardCornerRadius="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/radio_tingkat_tidak_ada"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tidak_ada"
                                android:textColor="@color/colorWhite" />


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginBottom="14dp"
                                android:contentDescription="@string/gambar_kulit_normal"
                                android:src="@drawable/kulitnormal" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_jerawat_ringan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50dp"
                        app:cardBackgroundColor="@color/colorPrimaryDark"
                        app:cardCornerRadius="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/radio_jerawat_ringan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/jerawat_ringan"
                                android:textColor="@color/colorWhite" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginBottom="5dp"
                                android:contentDescription="@string/gambar_kulit_berminyak"
                                android:src="@drawable/kulitnormal" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_jerawat_sedang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50dp"
                        app:cardBackgroundColor="@color/colorPrimaryDark"
                        app:cardCornerRadius="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:ignore="TooManyViews">


                            <RadioButton
